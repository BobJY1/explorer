{
    "name": "Explorer",
    "manifest_version": 2,
    "description": "Track players' resources on colonist.io",
    "version": "0.1.0",
    "icons": {
        "64": "icon64.png"
    },
    "permissions": [
        "https://hexs.io/*",
        "https://colonist.io/*"
    ],
    "content_scripts": [
        {
          "matches": ["https://hexs.io/*", "https://colonist.io/*"],
          "css": ["styles.css"],
          "run_at": "document_idle",
          "js": ["explorer.js"]
        }
      ]
}
