{
    "name": "Explorer",
    "manifest_version": 2,
    "description": "Be all-knowing - figure out what resources your opponents have on colonist.io",
    "version": "1.0",
    "icons": {
        "64": "icon64.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "https://colonist.io/*",
        "https://hexs.io/*"
    ],
    "content_scripts": [
        {
          "matches": ["https://colonist.io/*", "https://hexs.io/*"],
          "css": ["styles.css"],
          "run_at": "document_idle",
          "js": ["explorer.js"]
        }
      ]
}
